<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F79AFF"
    android:outlineAmbientShadowColor="#FFFFFF"
    android:outlineSpotShadowColor="#FFFFFF"
    tools:context=".steps">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="360dp"
        android:layout_height="220dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:background="#F79AFF"
        android:backgroundTint="#F79AFF"
        android:outlineAmbientShadowColor="#F79AFF"
        android:outlineSpotShadowColor="#F79AFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_11" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:srcCompat="@drawable/vector4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="112576 steps"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="509dp"
        android:layout_height="446dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:srcCompat="@drawable/rectangle5" />

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/map"
            android:layout_width="380dp"
            android:layout_height="107dp"
            android:backgroundTint="#C4C4C4"
            android:paddingLeft="200dp"
            android:paddingBottom="6dp"
            android:text="Маршруты"
            android:textColor="#890794"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="15dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/vector7" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button20"
            android:layout_width="378dp"
            android:layout_height="106dp"
            android:layout_gravity="bottom"
            android:autoSizeTextType="none"
            android:backgroundTint="#C4C4C4"
            android:paddingLeft="80dp"
            android:paddingBottom="6dp"
            android:text="Краткая информация"
            android:textAlignment="center"
            android:textColor="#890794"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:cornerRadius="15dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/vector8" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/vector9" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>